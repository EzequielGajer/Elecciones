@{
    ViewData["Title"] = "Agregar Candidato";
}

<link rel="stylesheet" href="~/css/formulario.css" asp-append-version="true" />

<div class="form-container">
    <div class="form-title">Agregar Candidato</div>

    <form method="post" action='@Url.Action("GuardarCandidato", "Home")'>
        @if (ViewBag.IdPartido != null)
        {
            <input type="hidden" name="IdPartido" value="@ViewBag.IdPartido" />
        }

        <div class="form-group">
            <label for="Nombre" class="form-label">Nombre:</label>
            <input type="text" autocomplete="off" id="Nombre" name="Nombre" class="form-input" required />
        </div>

        <div class="form-group">
            <label for="Apellido" class="form-label">Apellido:</label>
            <input type="text" id="Apellido" name="Apellido" class="form-input" required />
        </div>

        <div class="form-group">
            <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento:</label>
            <input type="date" id="FechaNacimiento" name="FechaNacimiento" class="form-input" required />
        </div>

        <div class="form-group">
            <label for="Foto" class="form-label">URL de la foto del candidato:</label>
            <input type="text" id="Foto" name="Foto" class="form-input" required />
        </div>

        <div class="form-group">
            <label for="Postulacion" class="form-label">Postulaci√≥n:</label>
            <input type="text" id="Postulacion" name="Postulacion" class="form-input" required />
        </div>

        <div class="form-group">
            <button type="submit" class="form-button">Guardar Candidato</button>
        </div>
    </form>
</div>


